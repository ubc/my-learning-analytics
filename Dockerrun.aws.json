{
	"AWSEBDockerrunVersion": "2",
	"containerDefinitions": [
		{
			"name": "web",
			"image": "explodingmentos/my-la-app:latest",
			"essential": true,
			"memory": 512,
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 5000
				}
			],
			"environment": [
				{ "name": "MYSQL_ENGINE", "value": "django.db.backends.mysql" },
				{ "name": "MYSQL_DATABASE", "value": "student_dashboard" },
				{ "name": "MYSQL_USER", "value": "student_dashboard_user" },
				{ "name": "MYSQL_PASSWORD", "value": "student_dashboard_pw" },
				{ "name": "MYSQL_HOST", "value": "student_dashboard_mysql" },
				{ "name": "MYSQL_PORT", "value": "3306" },
				{ "name": "ENV_FILE", "value": "/secrets/env.hjson" },
				{
					"name": "GOOGLE_APPLICATION_CREDENTIALS",
					"value": "/secrets/bq_cred.json"
				},
				{ "name": "TZ", "value": "America/Detroit" }
			],
			"links": ["mysql"]
		},
		{
			"name": "mysql",
			"image": "mysql:5.7",
			"essential": false,
			"memory": 256,
			"environment": [
				{ "name": "MYSQL_ROOT_PASSWORD", "value": "student_dashboard_root_pw" },
				{ "name": "MYSQL_DATABASE", "value": "student_dashboard" },
				{ "name": "MYSQL_USER", "value": "student_dashboard_user" },
				{ "name": "MYSQL_PASSWORD", "value": "student_dashboard_pw" }
			],
			"portMappings": [
				{
					"hostPort": 3306,
					"containerPort": 3306
				}
			]
		}
	]
}
